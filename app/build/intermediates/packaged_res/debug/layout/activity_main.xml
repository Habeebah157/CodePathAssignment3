<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="What is your name in 8 bits ASCII"
        android:textSize="40sp"
        android:background="@drawable/card_background"
        android:elevation="5dp"/>

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/card_background2"
        android:gravity="center"
        android:text="72 97 98 101 101 98 97 104"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/flashcard_answer"
        android:layout_marginBottom="-111dp"
        android:gravity="center"
        android:text="72 97 98 101 101 98 97 104"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/answer1"
        android:layout_marginBottom="-111dp"
        android:gravity="center"
        android:text="56 34 23 90 234 4 "
        android:textSize="45sp" />

    <TextView
        android:id="@+id/answer3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/answer2"
        android:layout_marginBottom="-111dp"
        android:gravity="center"
        android:text="45 64 63 23 4 202 0"
        android:textSize="45sp"
        />


    <ImageView
        android:id="@+id/toggle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="47dp"
        android:gravity="center"
        android:src="@drawable/iconmonstr_eye_lined" />

    <ImageView
        android:id="@+id/toggle2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="47dp"
        android:gravity="center"
        android:src="@drawable/iconmonstr_eye_off_lined"
        android:visibility="invisible"

        />

    <ImageView
        android:id="@+id/add"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ico"

        />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="360dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_baseline_edit_24" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="140dp"
        android:src="@drawable/ic_baseline_navigate_next_24" />

    <ImageView
        android:id="@+id/trash"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="355dp"
        android:layout_marginBottom="137dp"
        android:src="@drawable/iconmonstr_trash_can_thin" />


</RelativeLayout>

